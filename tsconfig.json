{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
